<Window x:Class="Timer_demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer_demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Button Content="Select Default Music File" 
                Margin="5"
                Click="SelectDefaultMusicFileButton_Click" />
        <Button Content="Select Special Music File" 
                Margin="5"
                Click="SelectSpecialMusicFileButton_Click" />
        <TextBlock Text="Music Scheduler is running..." 
                   Margin="5"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="16" 
                   FontWeight="Bold"/>
    </StackPanel>
</Window>
